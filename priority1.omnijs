/*{
	"type": "action",
	"targets": ["omnifocus"],
	"author": "Maarten den Brabeer",
	"identifier": "com.mdbraber.priority1",
	"version": "0.1",
	"description": "Apply priority 1 to tag",
	"label": "Priority 1",
	"shortLabel": "Prio 1"
}*/

var _ = (function() {

  var fnLibrary = PlugIn.find("com.mdbraber.fnLibrary").library("fnLibrary");
  var action = new PlugIn.Action(function(selection, sender) {
	fnLibrary.changePriority(selection.tasks, "1");
  });

  action.validate = function(selection, sender) {
    return selection.tasks.length > 0;
  };

  return action;
})();

_;
